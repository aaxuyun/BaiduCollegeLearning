            <h3>Some title</h3>
            <div class="content">
                <ul>
                    <li><span>HTML</span><a href="">Some Link1</a></li>
                    <li><span>JS</span><a class="active" href="">Some Link2</a></li>
                    <li><span>CSS</span><a href="">Some Link3</a></li>
                    <li><span>JS</span><a href="">Some Link4</a></li>
                </ul>
            </div>
            <img src="">
            <p class="">Some Text</p>
        </div>
        <div id="news-normal" class="section">
            <h3>Some title</h3>
            <div class="content">
                <ul>
                    <li><span>HTML</span><a href="">Some Link1</a></li>
                    <li><span>HTML</span><a href="">Some Link2</a></li>
                    <li><span>JS</span><a class="active" href="#">Some Link3</a></li>
                    <li><span>CSS</span><a href="">Some Link4</a></li>
                </ul>
            </div>
            <img src="">
            <p class="">Some Text</p>
        </div>      
    </div>
    <script>
    getAllListItem("li");
    findAllHtmlSpanInOneSection('news-normal');
    findListItem("news-normal", "css");
    getActiveLinkContent("news-normal");
    function getAllListItem(tag) {
        var items=document.getElementsByTagName(tag);// 返回页面中所有li标签
        console.log(items[2].tagName);
    }
    
    function findAllHtmlSpanInOneSection(sectionId) {

        var section=document.getElementById(sectionId);
        var spans=section.getElementsByTagName('span');
        var a=[];// 返回某个section下所有span中内容为HTML的span标签
        for(var i=0;i<spans.length;i++){
            if (spans[i].innerHTML==='HTML'){
                a.push(spans[i]);
            }
        }
        return a;
    }
    function findListItem(sectionId, spanCont) {
        var section=document.getElementById(sectionId);// 返回某个section下所有span中内容为HTML的span标签
        var spans=section.getElementsByTagName('span');
        var result=[];
        for(var i=0;i<spans.length;i++){
            if (spans[i].innerHTML===spanCont){
                console.log(spans[i].innerHTML);
            }
        } 
        return result;
    }

    function getActiveLinkContent(sectionId) {
        var section=document.getElementById(sectionId);// 返回某个section下，class为active的链接中包含的文字内容
       var html= section.getElementsByTagName('a')
       var act=[];
       for(var i=0;i<html.length;i++){
            if(html[i].className==="active"){
                act.push(html[i]);
            }
       }
       for(var j=0;j<act.length;j++){
            console.log(act[j].innerHTML);
       }
    }

    </script>
</body>
